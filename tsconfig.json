{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native", // or "react" / "react-jsx"
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "lib": ["es6"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "context/GlobalProvider.js", "lib/appwrite.js", "app/(tabs)/home.tsx"  ]
}
